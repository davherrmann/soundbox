env:
    node: true
    es6: true

rules:
    brace-style: [2, "1tbs"]
    comma-style: [2, "last"]
    default-case: 2
    func-style: [2, "declaration"]
    guard-for-in: 2
    indent: [2, 2]
    no-floating-decimal: 2
    no-mixed-spaces-and-tabs: 2
    no-nested-ternary: 2
    no-undefined: 2
    radix: 2
    space-after-keywords: [2, "always"]
    space-before-blocks: 2
    spaced-comment: [2, "always", { exceptions: ["-"]}]
    valid-jsdoc: [2, { prefer: { "return": "returns"}}]
    wrap-iife: 2
